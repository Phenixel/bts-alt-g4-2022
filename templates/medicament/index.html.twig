{% extends 'base.html.twig' %}

{% block title %}Medicament index{% endblock %}

{% block activeM %}active{% endblock %}

{% block stylesheets %}
    <link href="/assets/css/annimations.css" rel="stylesheet">
{%  endblock %}

{% block body %}
    <div class="header-table">
        <h1>Medicaments</h1>
    </div>

    <div class="sup_table">
        <button class="dark_mode" id="darkMode" onclick="passToDarkMode()"><i id="passDark" class="fas fa-moon"></i></button>
        <a href="{{ path('medicament_new') }}" class="btn btn-success" role="button" aria-disabled="true">Créer un nouveau</a>
    </div>
    <table id="table" class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Famille</th>
                <th>Composition</th>
                <th>Effets</th>
                <th style="width: 70px;">Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medicament in medicaments %}
            <tr class="tr">
                <td>{{ medicament['MED_NOMCOMMERCIAL'] }}</td>
                <td>{{ medicament['fam_libelle'] }}</td>
                <td>{{ medicament['MED_COMPOSITION'] }}</td>
                <td>{{ medicament['MED_EFFETS'] }}</td>
                <td>{{ medicament['MED_PRIXECHANTILLON'] }} €</td>
                <td>
                    <a href="{{ path('medicament_show', {'id': medicament.id}) }}"><i class="icon_index fas fa-eye"></i></a>
                    <a href="{{ path('medicament_edit', {'id': medicament.id}) }}"><i class="icon_index fas fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
