{% extends 'base.html.twig' %}

{% block title %}Connectez vous{% endblock %}

{% block stylesheets %}
    <link href="/assets/css/styleLogin.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="overlay">
    <form action="{{ path('login') }}" method="post">
        <div class="con">
            <header class="head-form">
                <h2>Se connecter</h2>
                <p>Utilisez votre mail et votre mot de passe :</p>
            </header>
            <br>
            <div class="field-set">
                <span class="input-item">
                <i class="fa fa-user-circle"></i>
                 </span>
                <input name="_username" class="form-input" id="txt-input" type="text" placeholder="Mail" required>

                <br>

                <span class="input-item">
                <i class="fa fa-key"></i>
                </span>
                <!--   Password Input-->
                <input name="_password" class="form-input" type="password" placeholder="Mot de passe" id="pwd" name="password" required>

                <span><i class="fa fa-eye" aria-hidden="true"  type="button" id="eye"></i></span>

                <br>

                <button type="submit" class="log-in"> Se connecter </button>
            </div>

            <div class="other">
                <!--      Forgot Password button-->
{#                <button class="btn submits frgt-pass">Forgot Password</button>#}
                <!--     Sign Up button -->
                <button id="register" class="btn submits sign-up">S'enregistrer
                    <i class="fa fa-user-plus" aria-hidden="true"></i>
                </button>
            </div>
        </div>

        {#<label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password"/>

        #}{# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}{#

        <button type="submit">login</button>#}
    </form>
</div>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <script src="assets/js/jsLogin.js"></script>

{% endblock %}
