{% extends 'base.html.twig' %}

{% block title %}Type Individu index{% endblock %}

{% block body %}
    <div class="header-table">
        <h1>Types d'individus</h1>
    </div>

    <div class="sup_table">
        <button class="dark_mode" id="darkMode" onclick="passToDarkMode()"><i id="passDark" class="fas fa-moon"></i></button>
        <a href="{{ path('type_individu_new') }}" class="btn btn-success" role="button" aria-disabled="true">Cr√©er un nouveau</a>
    </div>
    <table id="table" class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom du type d'individu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_individu in type_individus %}
            <tr class="tr">
                <td>{{ type_individu.id }}</td>
                <td>{{ type_individu.tinLibelle }}</td>
                <td>
                    <a href="{{ path('type_individu_show', {'id': type_individu.id}) }}"><i class="icon_index fas fa-eye"></i></a>
                    <a href="{{ path('type_individu_edit', {'id': type_individu.id}) }}"><i class="icon_index fas fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
